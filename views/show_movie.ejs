      border-radius: 8px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
    }

    .download-links h3 {
      color: #4285f4;
    }

    .download-links a {
      display: block;
      margin: 10px 0;
      padding: 10px 20px;
      background-color: #4285f4;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s, color 0.3s;
    }

    .download-links a:hover {
      background-color: #345dc1;
      color: #fff;
    }

    .tags {
  margin-top: 20px;
  text-align: left;
  background-color: transaprent;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}

.tags h3 {
  color: #4285f4;
}

.tags ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.tags li {
  display: inline-block;
  background-color: #e0e0e0;
  color: #333;
  padding: 5px 8px; /* Adjusted padding */
  margin: 4px;
  border-radius: 5px;
  font-size: 11px; /* Adjusted font size */
  transition: background-color 0.3s, color 0.3s;
}

.tags li:hover {
  background-color: #4285f4;
  color: #fff;
}

    @media only screen and (max-width: 600px) {
      .movie-container {
